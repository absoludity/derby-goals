@import 'nib'

body
    padding-top: 60px
    padding-bottom: 40px

#goal-details
    height: 0
    overflow: hidden
    transition: height 0.3s ease-in-out
    &.collapsed
        height: 0
    &.expanded
        height: 150px

textarea
    display:block

/* Prevent the text contents of draggable elements from being selectable. */
[draggable]
  user-select: none
  cursor: move

/* Table kanban instead */
table.kanban
    width: 100%
    td.over
        border: 2px dashed #000;
    th
        font-size: 30px
        width: 33.3%
    tbody tr
        height: 300px
        vertical-align: top
    td div.well
        width: 80%
        margin: 20px auto
    div.dragging
        opacity: 0.4
